---
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";

// Page info
const title = "Advertise with BitDoze";
const description = "Reach 27,000+ monthly developers and tech enthusiasts. Bypass adblockers with native advertising.";

// Stats
const stats = [
  { value: "27K+", label: "Unique Visitors", icon: "mdi:account-group" },
  { value: "30K+", label: "Page Views", icon: "mdi:eye" },
  { value: "41K+", label: "Page Sessions", icon: "mdi:cursor-default-click" },
  { value: "DR 24-32", label: "Domain Rating", icon: "mdi:chart-line" },
];

// Pricing packages (half of benjamincrozat prices)
const packages = [
  {
    name: "Premium Banner",
    description: "Stay on top of every page with maximum visibility",
    price: 300,
    period: "monthly",
    featured: true,
    features: [
      "Featured on top of every page",
      "Access to 27K+ monthly developers",
      "Bypass any adblocker",
      "A dofollow backlink on a DR 24-32 domain",
      "Live within 24 hours",
    ],
    cta: "Get Started",
  },
  {
    name: "Sidebar Placement",
    description: "Be visible in the sidebar on every article",
    price: 200,
    period: "monthly",
    featured: false,
    features: [
      "Visibility in sidebar on every article",
      "Bypass any adblocker",
      "Access to 27K+ monthly developers",
      "A dofollow backlink on a DR 24-32 domain",
      "Live within 24 hours",
    ],
    cta: "Get Started",
  },
  {
    name: "Sponsored Article",
    description: "Permanent placement with a dedicated article",
    price: 250,
    period: "one-time",
    featured: false,
    features: [
      "Featured on top of articles for a week",
      "Access to 27K+ monthly developers",
      "A dofollow backlink on a DR 24-32 domain",
      "Permanent position on the platform",
      "Full editorial control",
    ],
    cta: "Get Started",
  },
];

// Benefits
const benefits = [
  {
    icon: "mdi:shield-check",
    title: "Bypass Adblockers",
    description: "Native advertising that reaches your audience without being blocked by any adblocker.",
  },
  {
    icon: "mdi:target",
    title: "Targeted Audience",
    description: "Reach developers and tech enthusiasts actively seeking solutions like yours.",
  },
  {
    icon: "mdi:link-variant",
    title: "Quality Backlinks",
    description: "Get valuable dofollow backlinks from a growing tech domain with DR 24-32.",
  },
  {
    icon: "mdi:chart-areaspline",
    title: "Transparent Analytics",
    description: "Full access to our public analytics dashboard to track performance anytime.",
  },
];

// FAQ items
const faqs = [
  {
    question: "How quickly will my ad go live?",
    answer: "Once we receive your payment and creative materials, your ad will be live within 24 hours.",
  },
  {
    question: "What information do you need from me?",
    answer: "We need your company logo, a short description, and the URL you want to link to. For sponsored articles, we'll need the full article content.",
  },
  {
    question: "Can I see the analytics for my ad?",
    answer: "Yes! Our analytics dashboard is public. You can view all traffic statistics at any time to track performance.",
  },
  {
    question: "Are the backlinks dofollow?",
    answer: "Yes, all backlinks from advertising placements are dofollow links that pass SEO value to your website.",
  },
];
---

<Layout title={title} description={description} wideContent={true}>
  <main class="w-full">
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-white dark:bg-gray-900">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="py-16 md:py-24">
          <div class="text-center">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight tracking-tight mb-6 font-heading text-gray-900 dark:text-white">
              Show Off Your Business to
              <span class="bg-clip-text text-transparent bg-linear-to-r from-blue-500 to-indigo-500">
                27,000+ Developers
              </span>
            </h1>
            <div class="max-w-3xl mx-auto">
              <p class="text-xl text-gray-600 dark:text-gray-300 mb-10">
                Access an engaged audience of developers and tech enthusiasts while bypassing adblockers with native advertising.
              </p>
              <div class="flex flex-col sm:flex-row gap-4 justify-center mb-6">
                <a
                  href="#packages"
                  class="inline-flex items-center justify-center gap-2 px-8 py-4 text-lg font-semibold text-white bg-linear-to-r from-blue-500 to-indigo-500 rounded-lg hover:from-blue-600 hover:to-indigo-600 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl"
                >
                  <Icon name="mdi:tag" class="w-5 h-5" />
                  View Packages
                </a>
                <a
                  href="https://an.bitdoze.com/bitdoze.com/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center gap-2 px-8 py-4 text-lg font-semibold text-gray-900 dark:text-white bg-gray-100 dark:bg-gray-800 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transform hover:scale-105 transition-all duration-300"
                >
                  <Icon name="mdi:chart-bar" class="w-5 h-5" />
                  View Analytics
                </a>
              </div>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                Transparent analytics • Fast setup • Quality backlinks
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="py-12 bg-gray-50 dark:bg-gray-800 rounded-lg">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
          {stats.map((stat, index) => (
            <div
              class="stat-card text-center p-6 rounded-lg bg-white dark:bg-gray-700 shadow-sm hover:shadow-md transition-all duration-300 transform hover:-translate-y-1"
              style={`animation-delay: ${index * 100}ms`}
            >
              <div class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-blue-50 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 mb-4">
                <Icon name={stat.icon} class="w-6 h-6" />
              </div>
              <div class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-1">{stat.value}</div>
              <div class="text-sm text-gray-500 dark:text-gray-400">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="py-16 md:py-20 bg-white dark:bg-gray-900">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            Why Advertise With Us?
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            Get your product or service in front of developers who are actively looking for solutions.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
          {benefits.map((benefit, index) => (
            <div
              class="benefit-card group flex gap-5 p-6 bg-gray-50 dark:bg-gray-800 rounded-lg hover:shadow-lg transition-all duration-500 transform hover:-translate-y-1"
              style={`animation-delay: ${index * 150}ms`}
            >
              <div class="shrink-0">
                <div class="w-14 h-14 rounded-lg bg-linear-to-br from-blue-500 to-indigo-500 flex items-center justify-center text-white shadow-lg group-hover:scale-110 transition-transform duration-300">
                  <Icon name={benefit.icon} class="w-7 h-7" />
                </div>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
                  {benefit.title}
                </h3>
                <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                  {benefit.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Pricing Packages Section -->
    <section id="packages" class="py-16 md:py-20 bg-gray-50 dark:bg-gray-800 scroll-mt-20">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            Advertising Packages
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            Choose the package that best fits your marketing goals. All packages include native advertising that bypasses adblockers.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 md:gap-8">
          {packages.map((pkg, index) => (
            <div
              class={`package-card relative flex flex-col p-8 rounded-xl transition-all duration-500 transform hover:-translate-y-2 hover:shadow-xl ${
                pkg.featured
                  ? 'bg-linear-to-br from-blue-500 to-indigo-500 text-white shadow-xl scale-[1.02] lg:scale-105'
                  : 'bg-white dark:bg-gray-700 shadow-md'
              }`}
              style={`animation-delay: ${index * 150}ms`}
            >
              {pkg.featured && (
                <div class="absolute -top-4 left-1/2 -translate-x-1/2">
                  <span class="inline-flex items-center gap-1.5 px-4 py-1.5 bg-white text-blue-600 text-sm font-semibold rounded-full shadow-lg">
                    <Icon name="mdi:star" class="w-4 h-4" />
                    Most Popular
                  </span>
                </div>
              )}

              <div class="mb-6">
                <h3 class={`text-2xl font-bold mb-2 ${pkg.featured ? 'text-white' : 'text-gray-900 dark:text-white'}`}>
                  {pkg.name}
                </h3>
                <p class={`text-sm ${pkg.featured ? 'text-blue-100' : 'text-gray-500 dark:text-gray-400'}`}>
                  {pkg.description}
                </p>
              </div>

              <div class="mb-8">
                <div class="flex items-baseline gap-1">
                  <span class={`text-5xl font-bold ${pkg.featured ? 'text-white' : 'text-gray-900 dark:text-white'}`}>
                    ${pkg.price}
                  </span>
                  <span class={`text-sm ${pkg.featured ? 'text-blue-100' : 'text-gray-500 dark:text-gray-400'}`}>
                    USD / {pkg.period}
                  </span>
                </div>
              </div>

              <ul class="space-y-4 mb-8 grow">
                {pkg.features.map((feature) => (
                  <li class="flex items-start gap-3">
                    <div class={`shrink-0 mt-0.5 ${pkg.featured ? 'text-blue-200' : 'text-green-500'}`}>
                      <Icon name="mdi:check-circle" class="w-5 h-5" />
                    </div>
                    <span class={`text-sm ${pkg.featured ? 'text-blue-50' : 'text-gray-600 dark:text-gray-300'}`}>
                      {feature}
                    </span>
                  </li>
                ))}
              </ul>

              <a
                href="/contact/"
                class={`inline-flex items-center justify-center gap-2 px-6 py-4 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 ${
                  pkg.featured
                    ? 'bg-white text-blue-600 hover:bg-gray-100 shadow-lg'
                    : 'bg-linear-to-r from-blue-500 to-indigo-500 text-white hover:from-blue-600 hover:to-indigo-600 shadow-md hover:shadow-lg'
                }`}
              >
                {pkg.cta}
                <Icon name="mdi:arrow-right" class="w-5 h-5" />
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 md:py-20 bg-white dark:bg-gray-900">
      <div class="max-w-4xl mx-auto px-4 sm:px-6">
        <div class="bg-linear-to-r from-blue-500 to-indigo-500 rounded-2xl p-8 md:p-12 text-center shadow-xl">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Ready to Grow Your Business?
          </h2>
          <p class="text-lg text-blue-100 mb-8 max-w-2xl mx-auto">
            Get in touch today and start reaching thousands of developers who are actively looking for solutions like yours.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/contact/"
              class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-blue-600 rounded-lg font-semibold transition-all duration-300 hover:bg-gray-100 transform hover:scale-105 shadow-lg"
            >
              <Icon name="mdi:email-outline" class="w-5 h-5" />
              Contact Us
            </a>
            <a
              href="https://an.bitdoze.com/bitdoze.com/"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/10 backdrop-blur-sm text-white border-2 border-white/30 rounded-lg font-semibold transition-all duration-300 hover:bg-white/20 transform hover:scale-105"
            >
              <Icon name="mdi:chart-bar" class="w-5 h-5" />
              View Full Analytics
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-16 md:py-20 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-4xl mx-auto px-4 sm:px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            Frequently Asked Questions
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300">
            Everything you need to know about advertising with us
          </p>
        </div>

        <div class="space-y-4">
          {faqs.map((faq, index) => (
            <details
              class="faq-item group bg-white dark:bg-gray-700 rounded-xl shadow-sm hover:shadow-md transition-all duration-300 overflow-hidden"
              style={`animation-delay: ${index * 100}ms`}
            >
              <summary class="flex items-center justify-between gap-4 p-6 cursor-pointer list-none">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
                  {faq.question}
                </h3>
                <div class="faq-icon shrink-0 w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-600 flex items-center justify-center group-open:bg-blue-500 transition-all duration-300">
                  <Icon name="mdi:chevron-down" class="faq-icon-svg w-6 h-6 text-gray-500 dark:text-gray-400 group-open:rotate-180 transition-all duration-300" />
                </div>
              </summary>
              <div class="px-6 pb-6 pt-6">
                <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                  {faq.answer}
                </p>
              </div>
            </details>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Animation keyframes */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Apply animations to cards */
  .stat-card,
  .benefit-card,
  .package-card,
  .faq-item {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .stat-card,
    .benefit-card,
    .package-card,
    .faq-item {
      animation: none;
      opacity: 1;
    }
  }

  /* FAQ styling */
  details summary::-webkit-details-marker {
    display: none;
  }

  details[open] summary {
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  :global(.dark) details[open] summary {
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  /* FAQ icon color fix */
  details[open] .faq-icon .faq-icon-svg {
    color: white !important;
  }

  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }
</style>
