---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import PostCard from '@components/blog/PostCard.astro';
import Pagination from '@components/common/Pagination.astro';
import { getPagination } from '@utils/pagination';
import { siteConfig } from '@config/site';
import { isPostIdInLocale } from '@utils/i18n';

export async function getStaticPaths() {
  const posts = await getCollection('posts', ({ id, data }) => !data.draft && isPostIdInLocale(id, 'es'));
  const categories = [...new Set(posts.flatMap((post) => post.data.categories || []))];

  return categories.flatMap((category) => {
    const categoryPosts = posts
      .filter((post) => post.data.categories && post.data.categories.includes(category))
      .sort((a, b) => new Date(b.data.date || 0).getTime() - new Date(a.data.date || 0).getTime());

    const totalPages = Math.ceil(categoryPosts.length / siteConfig.postsPerPage);

    return Array.from({ length: totalPages }).map((_, i) => {
      const page = i + 1;
      if (page === 1) return null;

      return {
        params: {
          category: category.toLowerCase(),
          page: page.toString(),
        },
        props: {
          category,
          posts: categoryPosts,
          page,
          count: categoryPosts.length,
        },
      };
    }).filter(Boolean);
  });
}

const { category, posts, page, count } = Astro.props as {
  category: string;
  posts: CollectionEntry<'posts'>[];
  page: string | number;
  count: number;
};

const currentPage = typeof page === 'number' ? page : parseInt(page, 10);
const basePath = `/es/categories/${category.toLowerCase()}`;

const { startIndex, endIndex, prevUrl, nextUrl, totalPages } = getPagination({
  page: currentPage,
  totalPosts: count,
  basePath,
});

const paginatedPosts = posts.slice(startIndex, endIndex);
const noindex = siteConfig.noindex.categories;
const formattedCategory = category.charAt(0).toUpperCase() + category.slice(1);
---

<Layout
  title={`${formattedCategory} - Pagina ${currentPage} - ${siteConfig.name}`}
  description={`Articulos en ${formattedCategory} - Pagina ${currentPage}`}
  noindex={noindex}
  lang="es"
>
  <div class="w-full py-8">
    <header class="mb-10">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        Categoria: {formattedCategory}
      </h1>
      <p class="text-lg text-gray-700 dark:text-gray-300">
        Pagina {currentPage} de {totalPages}
      </p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {paginatedPosts.map((post) => (
        <PostCard post={post} />
      ))}
    </div>

    <Pagination
      currentPage={currentPage}
      totalPages={totalPages}
      prevUrl={prevUrl}
      nextUrl={nextUrl}
      basePath={basePath}
    />
  </div>
</Layout>
