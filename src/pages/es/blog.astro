---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import PostCard from '@components/blog/PostCard.astro';
import Pagination from '@components/common/Pagination.astro';
import { getPagination } from '@utils/pagination';
import { siteConfig } from '@config/site';
import { isPostIdInLocale } from '@utils/i18n';

const posts = await getCollection('posts', ({ id, data }) => {
  return !data.draft && isPostIdInLocale(id, 'es');
});

const sortedPosts = posts.sort((a, b) => {
  return new Date(b.data.date || 0).getTime() - new Date(a.data.date || 0).getTime();
});

const { postsPerPage } = getPagination({
  page: 1,
  totalPosts: sortedPosts.length,
  basePath: '/es/blog'
});

const paginatedPosts = sortedPosts.slice(0, postsPerPage);
---

<Layout
  title={`Blog en Espanol - ${siteConfig.name}`}
  description="Articulos de BitDoze en espanol sobre programacion, DevOps y herramientas."
  lang="es"
  hreflangs={[
    { lang: 'en', href: `${Astro.site || siteConfig.url}/blog/` },
    { lang: 'es', href: `${Astro.site || siteConfig.url}/es/blog/` },
    { lang: 'x-default', href: `${Astro.site || siteConfig.url}/blog/` },
  ]}
>
  <main class="w-full py-8">
    <header class="mb-10">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">Blog</h1>
      <p class="text-lg text-gray-700 dark:text-gray-300">Explora nuestros ultimos articulos en espanol.</p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {paginatedPosts.map((post) => (
        <PostCard post={post} />
      ))}
    </div>

    <Pagination
      currentPage={1}
      totalPages={Math.ceil(sortedPosts.length / postsPerPage)}
      prevUrl={null}
      nextUrl={sortedPosts.length > postsPerPage ? `/es/blog/page/2/` : null}
      basePath="/es/blog"
    />
  </main>
</Layout>
