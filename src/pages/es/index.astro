---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import PostCard from "@components/blog/PostCard.astro";
import { siteConfig } from "@config/site";
import { isPostIdInLocale } from "@utils/i18n";

const posts = await getCollection("posts", ({ id, data }) => {
  return !data.draft && isPostIdInLocale(id, "es");
});

const sortedPosts = posts.sort((a, b) => {
  return new Date(b.data.date || 0).getTime() - new Date(a.data.date || 0).getTime();
});

const latestPosts = sortedPosts.slice(0, 6);
const preloadImages = latestPosts
  .slice(0, 3)
  .map((post) => post.data.image?.src)
  .filter(Boolean);
---

<Layout
  title={`BitDoze en Espanol | ${siteConfig.name}`}
  description="Guias practicas de programacion, DevOps y herramientas para desarrolladores en espanol."
  wideContent={true}
  preloadImages={preloadImages}
  lang="es"
  hreflangs={[
    { lang: "en", href: `${Astro.site || siteConfig.url}/` },
    { lang: "es", href: `${Astro.site || siteConfig.url}/es/` },
    { lang: "x-default", href: `${Astro.site || siteConfig.url}/` },
  ]}
>
  <main class="w-full py-8">
    <section class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 mb-10">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        BitDoze en Espanol
      </h1>
      <p class="text-lg text-gray-700 dark:text-gray-300">
        Version en espanol del blog. Aqui encontraras articulos traducidos y nuevos contenidos.
      </p>
    </section>

    <section class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">Articulos recientes</h2>
        <a
          href="/es/blog/"
          class="text-blue-600 dark:text-blue-400 hover:underline font-medium"
        >
          Ver todos
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {latestPosts.map((post, index) => <PostCard post={post} priority={index < 3} />)}
      </div>
    </section>
  </main>
</Layout>
