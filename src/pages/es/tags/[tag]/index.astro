---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import PostCard from '@components/blog/PostCard.astro';
import Pagination from '@components/common/Pagination.astro';
import { getPagination } from '@utils/pagination';
import { siteConfig } from '@config/site';
import { isPostIdInLocale } from '@utils/i18n';

export async function getStaticPaths() {
  const posts = await getCollection('posts', ({ id, data }) => !data.draft && isPostIdInLocale(id, 'es'));
  const tags = [...new Set(posts.flatMap((post) => Array.isArray(post.data.tags) ? post.data.tags : []))].filter((tag) => tag && tag.trim() !== '');

  return tags.map((tag) => {
    const tagPosts = posts
      .filter((post) => post.data.tags && post.data.tags.some((t) => t.toLowerCase() === tag.toLowerCase()))
      .sort((a, b) => new Date(b.data.date || 0).getTime() - new Date(a.data.date || 0).getTime());

    return {
      params: { tag: tag.toLowerCase() },
      props: {
        tag,
        posts: tagPosts,
        count: tagPosts.length,
      },
    };
  });
}

const { tag, posts, count } = Astro.props;
const basePath = `/es/tags/${tag.toLowerCase()}`;

const { postsPerPage } = getPagination({
  page: 1,
  totalPosts: count,
  basePath,
});

const paginatedPosts = posts.slice(0, postsPerPage);
const noindex = siteConfig.noindex.tags;
const formattedTag = tag.charAt(0).toUpperCase() + tag.slice(1);
---

<Layout
  title={`Etiqueta ${formattedTag} - ${siteConfig.name}`}
  description={`Articulos con la etiqueta ${formattedTag}`}
  noindex={noindex}
  lang="es"
>
  <div class="w-full py-8">
    <header class="mb-10">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        Etiqueta: #{formattedTag}
      </h1>
      <p class="text-lg text-gray-700 dark:text-gray-300">
        {count} {count === 1 ? 'articulo' : 'articulos'}
      </p>
    </header>

    {count > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {paginatedPosts.map((post) => (
          <PostCard post={post} />
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-600 dark:text-gray-400">No se encontraron articulos.</p>
      </div>
    )}

    <Pagination
      currentPage={1}
      totalPages={Math.ceil(count / postsPerPage)}
      prevUrl={null}
      nextUrl={count > postsPerPage ? `${basePath}/page/2/` : null}
      basePath={basePath}
    />
  </div>
</Layout>
