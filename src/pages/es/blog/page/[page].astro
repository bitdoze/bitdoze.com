---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import PostCard from '@components/blog/PostCard.astro';
import Pagination from '@components/common/Pagination.astro';
import { getPagination } from '@utils/pagination';
import { siteConfig } from '@config/site';
import { isPostIdInLocale } from '@utils/i18n';

export async function getStaticPaths() {
  const posts = await getCollection('posts', ({ id, data }) => {
    return !data.draft && isPostIdInLocale(id, 'es');
  });

  const sortedPosts = posts.sort((a, b) => {
    return new Date(b.data.date || 0).getTime() - new Date(a.data.date || 0).getTime();
  });

  const totalPages = Math.ceil(sortedPosts.length / siteConfig.postsPerPage);

  return Array.from({ length: totalPages }).map((_, i) => {
    const page = i + 1;
    if (page === 1) return null;

    return {
      params: { page: page.toString() },
      props: {
        posts: sortedPosts,
        page,
        totalPosts: sortedPosts.length,
      },
    };
  }).filter(Boolean);
}

const { posts, page, totalPosts } = Astro.props as {
  posts: CollectionEntry<'posts'>[];
  page: string | number;
  totalPosts: number;
};

const currentPage = typeof page === 'number' ? page : parseInt(page, 10);
const basePath = '/es/blog';

const { startIndex, endIndex, prevUrl, nextUrl, totalPages } = getPagination({
  page: currentPage,
  totalPosts,
  basePath,
});

const paginatedPosts = posts.slice(startIndex, endIndex);
---

<Layout
  title={`Blog en Espanol - Pagina ${currentPage} - ${siteConfig.name}`}
  description={`Articulos en espanol - Pagina ${currentPage}`}
  noindex={true}
  lang="es"
>
  <main class="w-full py-8">
    <header class="mb-10">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">Blog</h1>
      <p class="text-lg text-gray-700 dark:text-gray-300">
        Pagina {currentPage} de {totalPages}
      </p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {paginatedPosts.map((post) => (
        <PostCard post={post} />
      ))}
    </div>

    <Pagination
      currentPage={currentPage}
      totalPages={totalPages}
      prevUrl={prevUrl}
      nextUrl={nextUrl}
      basePath={basePath}
    />
  </main>
</Layout>
