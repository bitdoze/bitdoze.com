---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import { siteConfig } from '@config/site';
import { isPostIdInLocale } from '@utils/i18n';

const posts = await getCollection('posts', ({ id, data }) => !data.draft && isPostIdInLocale(id, 'es'));
const authors = [...new Set(posts.flatMap((post) => post.data.authors || []))];
const authorCounts = authors.map((author) => ({
  name: author,
  count: posts.filter((post) => post.data.authors?.includes(author)).length,
  slug: author.toLowerCase(),
})).sort((a, b) => b.count - a.count);
---

<Layout
  title={`Autores - ${siteConfig.name}`}
  description="Autores de contenido en espanol"
  lang="es"
  hreflangs={[
    { lang: "en", href: `${Astro.site || siteConfig.url}/authors/` },
    { lang: "es", href: `${Astro.site || siteConfig.url}/es/authors/` },
    { lang: "x-default", href: `${Astro.site || siteConfig.url}/authors/` },
  ]}
>
  <div class="w-full py-8">
    <header class="mb-10">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">Autores</h1>
      <p class="text-lg text-gray-700 dark:text-gray-300">Explora contenido por autor.</p>
    </header>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {authorCounts.map(({ name, count, slug }) => (
        <a
          href={`/es/authors/${slug}/`}
          class="flex items-center justify-between p-5 bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow border border-gray-200 dark:border-gray-700"
        >
          <div class="flex items-center">
            <Icon name="mdi:account" class="w-6 h-6 text-blue-600 dark:text-blue-400 mr-3" />
            <span class="font-medium text-gray-900 dark:text-white">{name}</span>
          </div>
          <span class="bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-xs font-medium px-2.5 py-0.5 rounded-full">{count}</span>
        </a>
      ))}
    </div>
  </div>
</Layout>
