---
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { siteConfig } from "@config/site";

const title = "Publicidad en BitDoze";
const description = "Llega a desarrolladores y publico tecnico con espacios nativos en el blog.";

const packs = [
  { name: "Banner principal", price: "$300 / mes", points: ["Mayor visibilidad", "Publico tecnico", "Publicacion rapida"] },
  { name: "Sidebar", price: "$200 / mes", points: ["Presencia en articulos", "Formato nativo", "Backlink dofollow"] },
  { name: "Articulo patrocinado", price: "$250 pago unico", points: ["Contenido dedicado", "Posicion permanente", "Enlace SEO"] },
];
---

<Layout
  title={`${title} - ${siteConfig.name}`}
  description={description}
  wideContent={true}
  lang="es"
  hreflangs={[
    { lang: "en", href: `${Astro.site || siteConfig.url}/advertise/` },
    { lang: "es", href: `${Astro.site || siteConfig.url}/es/advertise/` },
    { lang: "x-default", href: `${Astro.site || siteConfig.url}/advertise/` },
  ]}
>
  <main class="w-full py-12">
    <section class="max-w-6xl mx-auto px-4 sm:px-6">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">{title}</h1>
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-10">{description}</p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {packs.map((pack) => (
          <article class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6 shadow-sm">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-1">{pack.name}</h2>
            <p class="text-blue-600 dark:text-blue-400 font-semibold mb-4">{pack.price}</p>
            <ul class="space-y-2 mb-6">
              {pack.points.map((point) => (
                <li class="text-gray-700 dark:text-gray-300 flex items-start gap-2">
                  <Icon name="mdi:check-circle" class="w-5 h-5 text-green-500 mt-0.5" />
                  <span>{point}</span>
                </li>
              ))}
            </ul>
            <a
              href="/es/contact/"
              class="inline-flex items-center justify-center gap-2 px-5 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors"
            >
              Solicitar espacio
              <Icon name="mdi:arrow-right" class="w-5 h-5" />
            </a>
          </article>
        ))}
      </div>

      <div class="mt-10 text-sm text-gray-500 dark:text-gray-400">
        Tambien puedes revisar analiticas publicas en
        <a class="text-blue-600 dark:text-blue-400 hover:underline" href="https://an.bitdoze.com/bitdoze.com/" target="_blank" rel="noopener noreferrer">an.bitdoze.com</a>.
      </div>
    </section>
  </main>
</Layout>
