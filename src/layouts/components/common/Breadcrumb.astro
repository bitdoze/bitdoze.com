---
import { Icon } from 'astro-icon/components';

interface BreadcrumbItem {
  name: string;
  url: string;
}

interface Props {
  items: BreadcrumbItem[];
  className?: string;
}

const { items, className = "" } = Astro.props;
---

<nav aria-label="Breadcrumb" class={`breadcrumb ${className}`}>
  <ol class="breadcrumb-list">
    {items.map((item, index) => (
      <li class="breadcrumb-item">
        {index > 0 && (
          <Icon name="mdi:chevron-right" class="breadcrumb-separator" />
        )}
        {index === items.length - 1 ? (
          <span class="breadcrumb-current" aria-current="page">
            {item.name}
          </span>
        ) : (
          <a href={item.url} class="breadcrumb-link">
            {index === 0 && (
              <Icon name="mdi:home" class="breadcrumb-home-icon" />
            )}
            <span>{item.name}</span>
          </a>
        )}
      </li>
    ))}
  </ol>
</nav>

<style>
  .breadcrumb {
    margin-bottom: 1.5rem;
  }

  .breadcrumb-list {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    gap: 0.125rem;
    padding: 0.5rem 0.625rem;
    font-size: 0.75rem;
    background: var(--color-bg-muted);
    border: 1px solid var(--color-border-muted);
    border-radius: 0.5rem;
    list-style: none;
    margin: 0;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }

  .breadcrumb-list::-webkit-scrollbar {
    display: none;
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
    min-width: 0;
  }

  .breadcrumb-separator {
    width: 0.875rem;
    height: 0.875rem;
    margin: 0 0.5rem;

    color: var(--color-text-subtle);
    flex-shrink: 0;
  }

  .breadcrumb-link {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.1875rem 0.5rem;
    color: var(--color-primary-600);
    font-weight: 500;
    text-decoration: none;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .breadcrumb-link:hover {
    color: var(--color-primary-700);
    background: var(--color-primary-50);
  }

  :global(.dark) .breadcrumb-link {
    color: var(--color-primary-400);
  }

  :global(.dark) .breadcrumb-link:hover {
    color: var(--color-primary-300);
    background: rgba(59, 130, 246, 0.15);
  }

  .breadcrumb-home-icon {
    width: 0.875rem;
    height: 0.875rem;
    flex-shrink: 0;
  }

  .breadcrumb-current {
    display: inline-flex;
    align-items: center;
    padding: 0.1875rem 0.5rem;
    color: var(--color-primary-700);
    font-weight: 600;
    background: linear-gradient(135deg, var(--color-primary-50), var(--color-primary-100));
    border: 1px solid var(--color-primary-200);
    border-radius: 0.375rem;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  :global(.dark) .breadcrumb-current {
    color: var(--color-primary-300);
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.15), rgba(59, 130, 246, 0.25));
    border-color: rgba(59, 130, 246, 0.3);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  @media (min-width: 768px) {
    .breadcrumb-list {
      font-size: 0.875rem;
      gap: 0.25rem;
      padding: 0.625rem 1rem;
      border-radius: 0.75rem;
    }

    .breadcrumb-separator {
      width: 1rem;
      height: 1rem;
      margin: 0 0.125rem;
    }

    .breadcrumb-link {
      gap: 0.375rem;
      padding: 0.25rem 0.625rem;
    }

    .breadcrumb-home-icon {
      width: 1rem;
      height: 1rem;
    }

    .breadcrumb-current {
      padding: 0.25rem 0.75rem;
    }
  }
</style>
