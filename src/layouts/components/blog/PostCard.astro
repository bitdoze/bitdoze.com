---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { formatDate } from "@utils/date";
import SeriesBadge from "./SeriesBadge.astro";
import { getEntryHref, getEntrySlug } from "@utils/content";
import { getTransitionAnimation } from "@utils/view-transitions";

interface Props {
  post: any;
  priority?: boolean;
}

const { post, priority = false } = Astro.props;
const { title, description, image, date, categories, authors, series } =
  post.data;

const slug = getEntrySlug(post);
const href = getEntryHref(post);
const postImageTransition = getTransitionAnimation("postImages");
const postTitleTransition = getTransitionAnimation("postTitles");
const postImageTransitionAttrs = postImageTransition
  ? { ["transition:animate"]: postImageTransition }
  : {};
const postTitleTransitionAttrs = postTitleTransition
  ? { ["transition:animate"]: postTitleTransition }
  : {};

// Check if post is part of a series
const isPartOfSeries = series && Array.isArray(series) && series.length === 2;
---

<article
  class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden transition-transform duration-400 hover:transform hover:scale-[1.02]"
>
  <!-- Post Image -->
  {
    image && (
      <a href={href} class="block overflow-hidden aspect-video">
        <Image
          src={image}
          alt={title}
          class="w-full h-full object-cover transition-transform duration-400 hover:scale-105"
          width={640}
          height={360}
          loading={priority ? "eager" : "lazy"}
          decoding={priority ? "sync" : "async"}
          fetchpriority={priority ? "high" : "auto"}
          sizes="(max-width: 480px) 480px, (max-width: 768px) 640px, (max-width: 1024px) 480px, 640px"
          transition:name={`post-image-${slug}`}
          {...postImageTransitionAttrs}
        />
      </a>
    )
  }

  <div class="p-5">
    <div class="flex flex-wrap gap-2 mb-2 items-center justify-between">
      <!-- Categories -->
      {
        categories && categories.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {categories.map((category: string) => (
              <a
                href={`/categories/${category.toLowerCase()}/`}
                class="text-xs font-medium px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 rounded-full hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors"
              >
                {category}
              </a>
            ))}
          </div>
        )
      }

      <!-- Series Badge (if part of a series) -->
      {
        isPartOfSeries && (
          <SeriesBadge
            seriesName={series[0]}
            seriesPosition={series[1]}
            size="sm"
          />
        )
      }
    </div>

    <!-- Title -->
    <h2
      class="text-xl font-bold mb-2 text-gray-900 dark:text-white line-clamp-2"
      transition:name={`post-title-${slug}`}
      {...postTitleTransitionAttrs}
    >
      <a
        href={href}
        class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
      >
        {title}
      </a>
    </h2>

    <!-- Description -->
    {
      description && (
        <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-3">
          {description}
        </p>
      )
    }

    <div
      class="flex items-center justify-between mt-4 text-sm text-gray-500 dark:text-gray-400"
    >
      <!-- Author -->
      {
        authors && authors.length > 0 && (
          <div class="flex items-center">
            <Icon name="mdi:account" class="w-4 h-4 mr-1" />
            <span>{authors[0]}</span>
          </div>
        )
      }

      <!-- Date -->
      {
        date && (
          <div class="flex items-center">
            <Icon name="mdi:calendar" class="w-4 h-4 mr-1" />
            <time datetime={date.toISOString()}>{formatDate(date)}</time>
          </div>
        )
      }
    </div>
  </div>
</article>
