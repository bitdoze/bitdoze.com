---
export interface Props {
  name: string;
}

const { name } = Astro.props;
---

<div
  class="tab-panel prose dark:prose-invert prose-lg max-w-none p-4 sm:p-6"
  data-name={name}
>
  <slot />
</div>

<style>
  .tab-panel {
    /* Ensure full width */
    width: 100%;
    max-width: none;
    font-size: 1rem;
    line-height: 1.75;
  }

  /* Override prose styles for better content display */
  .tab-panel :global(h1),
  .tab-panel :global(h2),
  .tab-panel :global(h3),
  .tab-panel :global(h4),
  .tab-panel :global(h5),
  .tab-panel :global(h6) {
    margin-top: 1.5rem;
    margin-bottom: 1rem;
    width: 100%;
  }

  .tab-panel :global(h1:first-child),
  .tab-panel :global(h2:first-child),
  .tab-panel :global(h3:first-child),
  .tab-panel :global(h4:first-child),
  .tab-panel :global(h5:first-child),
  .tab-panel :global(h6:first-child) {
    margin-top: 0;
  }

  .tab-panel :global(p) {
    margin-bottom: 1rem;
    width: 100%;
  }

  .tab-panel :global(ul),
  .tab-panel :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
    width: 100%;
  }

  .tab-panel :global(li) {
    margin-bottom: 0.5rem;
    width: 100%;
  }

  .tab-panel :global(pre) {
    margin: 1rem 0;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    width: 100%;
  }

  .tab-panel :global(code) {
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .tab-panel :global(blockquote) {
    margin: 1rem 0;
    padding-left: 1rem;
    border-left: 4px solid #d1d5db;
    width: 100%;
  }

  :global(.dark) .tab-panel :global(blockquote) {
    border-left-color: #6b7280;
  }

  /* Ensure text content uses full width */
  .tab-panel :global(*) {
    max-width: none;
  }

  .tab-panel :global(div),
  .tab-panel :global(span) {
    width: 100%;
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .tab-panel {
      padding: 1rem;
      font-size: 0.875rem;
      line-height: 1.625;
    }
  }
</style>
