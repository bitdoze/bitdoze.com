---
import { Icon } from 'astro-icon/components';

interface Props {
  resource: {
    id: number;
    title: string;
    description: string;
    image: string;
    ctaText: string;
    ctaUrl: string;
    discount?: string;
    category: string;
  };
}

const { resource } = Astro.props;

const getImagePath = (imagePath: string) => {
  if (!imagePath) return null;
  
  // If it's an external URL, return as is
  if (imagePath.startsWith('http://') || imagePath.startsWith('https://')) {
    return imagePath;
  }
  
  // Convert @images/ to /images/ (public folder)
  if (imagePath.startsWith('@images/')) {
    return imagePath.replace('@images/', '/images/');
  }
  
  return imagePath;
};

const processedImagePath = getImagePath(resource.image);
---

<article class="relative bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-1 h-full flex flex-col">
  {resource.discount && (
    <div class="absolute top-2 right-2 bg-gradient-to-r from-red-500 to-pink-500 text-white font-bold py-1 px-3 text-xs rounded-full transform rotate-2 shadow-md z-10">
      {resource.discount}
    </div>
  )}

  <div class="p-6 flex-1 flex flex-col">
    <!-- Image Section -->
    <div class="mb-4 bg-gray-50 dark:bg-gray-700 rounded-lg p-4 flex items-center justify-center h-32">
      {processedImagePath ? (
        <img
          src={processedImagePath}
          alt={resource.title}
          class="max-w-full max-h-full object-contain"
          transition:name={`resource-${resource.id}`}
          transition:animate="slide"
        />
      ) : (
        <Icon name="mdi:image" class="w-16 h-16 text-gray-300 dark:text-gray-500" />
      )}
    </div>

    <!-- Category Badge -->
    <div class="mb-3">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-100">
        {resource.category}
      </span>
    </div>

    <!-- Title -->
    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-3 line-clamp-2">
      {resource.title}
    </h3>

    <!-- Description -->
    <p class="text-gray-600 dark:text-gray-300 text-sm mb-4 line-clamp-3 flex-1">
      {resource.description}
    </p>

    <!-- CTA Button -->
    <div class="mt-auto">
      <a
        href={resource.ctaUrl}
        target="_blank"
        rel="noopener noreferrer sponsored"
        class="inline-flex items-center justify-center w-full px-5 py-2.5 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 rounded-lg transition-all duration-300 transform hover:-translate-y-0.5 shadow-sm hover:shadow-md"
      >
        {resource.ctaText}
        <Icon name="mdi:arrow-right" class="ml-2 h-4 w-4" />
      </a>
      <p class="mt-2 text-xs text-center text-gray-500 dark:text-gray-400">
        *Affiliate link
      </p>
    </div>
  </div>
</article>
