---
// src/components/YouTubeVideosSSG.astro
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import { fetchYouTubeVideos } from "@utils/server/youtube";
import type { YouTubeVideo } from "@utils/server/youtube";
import { getTransitionAnimation } from "@utils/view-transitions";

// Your YouTube Channel ID
const CHANNEL_ID = "UCGsUtKhXsRrMvYAWm8q0bCg"; // Replace with your channel ID
const MAX_VIDEOS = 6; // Number of videos to display

let videos: YouTubeVideo[] = [];
let error = null;

try {
  videos = await fetchYouTubeVideos(CHANNEL_ID, MAX_VIDEOS);
} catch (err) {
  if (import.meta.env.DEV) {
    console.error("Error fetching YouTube videos:", err);
  }
  error = err instanceof Error ? err.message : "An unknown error occurred";
}

const videoTransition = getTransitionAnimation("youtubeVideos");
const videoTitleTransition = getTransitionAnimation("postTitles");
const videoTransitionAttrs = videoTransition
  ? { ["transition:animate"]: videoTransition }
  : {};
const videoTitleTransitionAttrs = videoTitleTransition
  ? { ["transition:animate"]: videoTitleTransition }
  : {};
---

<section class="py-8 bg-white dark:bg-gray-900 rounded-lg">
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <div class="text-center mb-8">
      <h2
        class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-4"
      >
        Latest YouTube Videos
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300">
        Check out our latest content on YouTube
      </p>
    </div>

    {
      error ? (
        <div class="text-center py-8">
          <p class="text-red-600 dark:text-red-400">
            Unable to load YouTube videos. Please try again later.
          </p>
        </div>
      ) : videos.length === 0 ? (
        <div class="text-center py-8">
          <p class="text-gray-600 dark:text-gray-400">No videos found.</p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {videos.map((video) => (
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-transform duration-300 hover:-translate-y-1 border border-gray-200 dark:border-gray-700">
              <div class="relative">
                <a href={video.url} target="_blank" rel="noopener noreferrer">
                  <Image
                    src={video.thumbnail}
                    alt={video.title}
                    width={320}
                    height={180}
                    class="w-full h-48 object-cover rounded-t-lg"
                    loading="lazy"
                    format="webp"
                    transition:name={`youtube-${video.id}`}
                    {...videoTransitionAttrs}
                  />
                </a>
                <a href={video.url} target="_blank" rel="noopener noreferrer">
                  <Icon
                    name="mdi:play-circle"
                    class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-white w-16 h-16 drop-shadow-lg opacity-80 hover:opacity-100 transition-opacity"
                  />
                </a>
              </div>
              <div class="p-4">
                <a href={video.url} target="_blank" rel="noopener noreferrer">
                  <h3
                    class="text-lg font-semibold text-gray-900 dark:text-white line-clamp-2 mb-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                    transition:name={`youtube-title-${video.id}`}
                    {...videoTitleTransitionAttrs}
                  >
                    {video.title}
                  </h3>
                </a>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  {video.published.toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "short",
                    day: "numeric",
                  })}
                </p>
              </div>
            </div>
          ))}
        </div>
      )
    }

    <div class="text-center mt-8">
      <a
        href={`https://www.youtube.com/channel/${CHANNEL_ID}`}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg transition-colors duration-300"
      >
        <Icon name="mdi:youtube" class="w-5 h-5 mr-2" />
        View All Videos
      </a>
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
