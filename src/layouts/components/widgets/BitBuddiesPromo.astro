---
import { Icon } from "astro-icon/components";
---

<div
  class="not-prose my-8 overflow-hidden rounded-lg bg-white dark:bg-gray-900 shadow-xl hover:shadow-2xl transition-all duration-300 border border-gray-200 dark:border-gray-800 max-w-4xl mx-auto"
>
  <div class="relative">
    <!-- Decorative background elements -->
    <div
      class="absolute top-0 right-0 w-32 h-32 bg-linear-to-br from-blue-500/5 to-indigo-500/5 dark:from-blue-500/10 dark:to-indigo-500/10 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-40 h-40 bg-linear-to-tr from-indigo-500/5 to-blue-500/5 dark:from-indigo-500/10 dark:to-blue-500/10 rounded-full blur-3xl"
    >
    </div>

    <div
      class="relative flex flex-col md:flex-row items-center gap-6 p-6 md:p-8"
    >
      <!-- SVG Graphic Section -->
      <div class="w-full md:w-2/5 shrink-0">
        <div class="relative">
          <!-- SVG Illustration -->
          <svg
            viewBox="0 0 200 200"
            class="w-full h-auto max-w-[200px] mx-auto"
            xmlns="http://www.w3.org/2000/svg"
          >
            <!-- Background circle -->
            <circle
              cx="100"
              cy="100"
              r="95"
              fill="url(#gradient1)"
              opacity="0.1"></circle>

            <!-- Main platform/laptop -->
            <rect
              x="40"
              y="85"
              width="120"
              height="75"
              rx="4"
              fill="url(#gradient2)"
              class="drop-shadow-lg"></rect>
            <rect
              x="45"
              y="90"
              width="110"
              height="55"
              rx="2"
              fill="#1e293b"
              class="dark:fill-gray-800"></rect>

            <!-- Screen content lines (code) -->
            <line
              x1="55"
              y1="100"
              x2="100"
              y2="100"
              stroke="#3b82f6"
              stroke-width="2"
              stroke-linecap="round"></line>
            <line
              x1="55"
              y1="110"
              x2="130"
              y2="110"
              stroke="#6366f1"
              stroke-width="2"
              stroke-linecap="round"></line>
            <line
              x1="55"
              y1="120"
              x2="90"
              y2="120"
              stroke="#3b82f6"
              stroke-width="2"
              stroke-linecap="round"></line>
            <line
              x1="55"
              y1="130"
              x2="120"
              y2="130"
              stroke="#6366f1"
              stroke-width="2"
              stroke-linecap="round"></line>

            <!-- People/Community icons -->
            <circle cx="60" cy="50" r="12" fill="url(#gradient3)"></circle>
            <circle cx="100" cy="45" r="14" fill="url(#gradient4)"></circle>
            <circle cx="140" cy="50" r="12" fill="url(#gradient5)"></circle>

            <!-- Connection lines between people -->
            <line
              x1="70"
              y1="55"
              x2="88"
              y2="52"
              stroke="#6366f1"
              stroke-width="1.5"
              opacity="0.6"></line>
            <line
              x1="112"
              y1="52"
              x2="130"
              y2="55"
              stroke="#6366f1"
              stroke-width="1.5"
              opacity="0.6"></line>

            <!-- Workshop/learning icons -->
            <circle cx="170" cy="120" r="8" fill="#10b981" opacity="0.8"
            ></circle>
            <path d="M 170 115 L 167 120 L 170 125 L 173 120 Z" fill="white"
            ></path>

            <!-- Gradients -->
            <defs>
              <linearGradient
                id="gradient1"
                x1="0%"
                y1="0%"
                x2="100%"
                y2="100%"
              >
                <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:1"
                ></stop>
                <stop offset="100%" style="stop-color:#6366f1;stop-opacity:1"
                ></stop>
              </linearGradient>
              <linearGradient
                id="gradient2"
                x1="0%"
                y1="0%"
                x2="100%"
                y2="100%"
              >
                <stop offset="0%" style="stop-color:#60a5fa;stop-opacity:1"
                ></stop>
                <stop offset="100%" style="stop-color:#818cf8;stop-opacity:1"
                ></stop>
              </linearGradient>
              <linearGradient
                id="gradient3"
                x1="0%"
                y1="0%"
                x2="100%"
                y2="100%"
              >
                <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:1"
                ></stop>
                <stop offset="100%" style="stop-color:#6366f1;stop-opacity:1"
                ></stop>
              </linearGradient>
              <linearGradient
                id="gradient4"
                x1="0%"
                y1="0%"
                x2="100%"
                y2="100%"
              >
                <stop offset="0%" style="stop-color:#6366f1;stop-opacity:1"
                ></stop>
                <stop offset="100%" style="stop-color:#3b82f6;stop-opacity:1"
                ></stop>
              </linearGradient>
              <linearGradient
                id="gradient5"
                x1="0%"
                y1="0%"
                x2="100%"
                y2="100%"
              >
                <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:1"
                ></stop>
                <stop offset="100%" style="stop-color:#6366f1;stop-opacity:1"
                ></stop>
              </linearGradient>
            </defs>
          </svg>
        </div>
      </div>

      <!-- Content Section -->
      <div class="w-full md:w-3/5 text-center md:text-left space-y-4">
        <div class="space-y-2">
          <div
            class="inline-flex items-center gap-2 px-3 py-1 bg-linear-to-r from-blue-500 to-indigo-500 text-white text-xs font-semibold rounded-full shadow-md"
          >
            <Icon name="mdi:star" class="w-4 h-4" />
            <span>Community & Learning</span>
          </div>

          <h3
            class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white"
          >
            Join <span
              class="bg-clip-text text-transparent bg-linear-to-r from-blue-500 to-indigo-500"
              >BitBuddies</span
            >
          </h3>

          <p
            class="text-sm md:text-base text-gray-600 dark:text-gray-300 leading-relaxed"
          >
            Level up your DevOps skills with hands-on courses on <strong
              class="text-blue-500">CloudPanel</strong
            > and <strong class="text-indigo-500">Dockploy</strong>. Join our
            community of developers and get expert workshops to accelerate your
            online journey.
          </p>
        </div>

        <!-- Features list -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 text-sm">
          <div class="flex items-center gap-2 text-gray-600 dark:text-gray-300">
            <Icon
              name="mdi:check-circle"
              class="w-5 h-5 text-green-500 shrink-0"
            />
            <span>Expert-led Courses</span>
          </div>
          <div class="flex items-center gap-2 text-gray-600 dark:text-gray-300">
            <Icon
              name="mdi:check-circle"
              class="w-5 h-5 text-green-500 shrink-0"
            />
            <span>Live Workshops</span>
          </div>
          <div class="flex items-center gap-2 text-gray-600 dark:text-gray-300">
            <Icon
              name="mdi:check-circle"
              class="w-5 h-5 text-green-500 shrink-0"
            />
            <span>Supportive Community</span>
          </div>
          <div class="flex items-center gap-2 text-gray-600 dark:text-gray-300">
            <Icon
              name="mdi:check-circle"
              class="w-5 h-5 text-green-500 shrink-0"
            />
            <span>Practical Projects</span>
          </div>
        </div>

        <!-- CTA Button -->
        <div class="pt-2">
          <a
            href="https://bitbuddies.me/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-6 py-3 text-base font-semibold text-white bg-linear-to-r from-blue-500 to-indigo-500 rounded-lg hover:from-blue-600 hover:to-indigo-600 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl"
          >
            <span>Explore BitBuddies</span>
            <Icon name="mdi:arrow-right" class="w-5 h-5" />
          </a>

          <p class="mt-2 text-xs text-gray-500 dark:text-gray-400 italic">
            Start your journey to DevOps mastery today! ðŸš€
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
